

<div class="wrapper">
<div style="font-size:32px; color:white;">
	<div>sb transpo</div>
	<%= image_tag "bus_logo.png" %>
</div>
<hr style="color:white;">
<table class="fields">
	<tr>
		<td class="left-column">Busline:</td>
		<td>
			<%= collection_select :widget, :route, @all_routes, :route_id, :route_short_name, :input_html => {:rel => "/categories/subcategories_by_category" } %>
		</td>
	</tr>
	<tr>
		<td class="left-column">Stop:</td>
		<td>
			<div id="stops">
				<select id="widget_stop"></select>
			</div>
		</td>
	</tr>
	<tr>
		<td class="left-column">Direction:</td>
		<td>
			<select id="widget_direction"></select>
		</td>
	</tr>
	<tr>
		<td class="left-column">Time:</td>
		<td>
			<select id="widget_time"></select>
		</td>
	</tr>
	<tr>
		<td class="left-column">Day:</td>
		<td>
			<select id="widget_day"></select>
		</td>
	</tr>
	<tr>
		<td class="Next-Bus left-column">Next Bus:</td>
		<td>3:15pm</td>
	</tr>
</table>
</div>
